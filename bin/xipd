#!/usr/bin/env node

var xip = require('..');
var argv = process.argv;

if (argv.length < 3) {
  console.error("usage: xipd <domain> [address]");
  process.exit(1);
}

xip.initDatabase( './dns.db', function(db){

var domain = argv[2];
var address = argv[3] || "127.0.0.1";
var server = xip.createServer(domain, address, db);
server.bind(5300);

console.log("xipd listening on port 5300: domain =", domain, "address =", address);

web = xip.createWebServer(db)

});